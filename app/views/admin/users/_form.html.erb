<%= form_with(model: [ :admin, @user ], local: true) do |form| %>
  <div class="row">
    <% if user.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="row form-line">
      <div class="name form-group col-sm-12">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="email form-group col-sm-12">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control" %>
      </div>

      <% if action_name == 'new' %>
        <div class="password form-group col-sm-12">
          <%= form.label :password %>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="password_cofirmation form-group col-sm-12">
          <%= form.label :password_cofirmation %>
          <%= form.password_field :password_cofirmation, class: "form-control" %>
        </div>
      <% end %>

      <div class="admin form-group col-sm-12">
        <%= form.label :admin %>
        <%= form.select :status,[ "無", "有"], class: "form-control" %>
      </div>


      <div class="actions form-group col-sm-12">
        <%= form.submit class: "btn btn-primary col-sm-12" %>
      </div>
    </div>
  </div>
<% end %>

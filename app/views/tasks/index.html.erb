<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>タスク詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= link_to t('view.Show'), task %></td>
        <td><%= link_to t('view.Edit'), edit_task_path(task) %></td>
        <td><%= link_to t('view.Destroy'), task, method: :delete, data: { confirm: t('confirm.Are you sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


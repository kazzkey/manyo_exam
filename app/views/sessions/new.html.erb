<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
  <div class="row">
    <div class="row form-line">
      <h3 class="col-sm-12">Log in</h3>
      <div class="email form-group col-sm-12">
        <%= form.label :email, t('view.email') %>
        <%= form.email_field :email, class: "form-control" %>
      </div>

      <div class="password form-group col-sm-12">
        <%= form.label :password, t('view.password') %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div class="actions form-group col-sm-12">
        <%= form.submit "ログイン",class: "btn btn-primary col-sm-12" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="row form-line">
      <div>
        アカウントをお持ちでないですか？
        <%= link_to "Sign up", new_user_path %>
      </div>
    </div>
  </div>
<% end %>
